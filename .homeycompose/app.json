{
  "id": "se.oxiecloud.monta",
  "version": "0.1.2",
  "compatibility": ">=12.4.5",
  "sdk": 3,
  "name": {
    "en": "Monta EV Charger",
    "sv": "Monta laddbox"
  },
  "description": {
    "en": "Monta - Your smart EV charging solution.",
    "sv": "Monta - Din smarta lösning för elbilsladdning."
  },
  "category": ["energy"],
  "brandColor": "#8E1C16",
  "author": {
    "name": "Mats Knuts"
  },
  "source": "https://github.com/mknuts/se.oxiecloud.monta",
  "bugs": {
    "url": "https://github.com/mknuts/se.oxiecloud.monta/issues"
  },
  "images": {
    "small": "/assets/images/app_small.png",
    "large": "/assets/images/app_large.png"
  },
  "drivers": [
    {
      "id": "monta-ev-charger",
      "name": { "en": "Monta Charger", "sv": "Monta laddbox" },
      "class": "evcharger",
      "capabilities": [ "measure_power", "meter_power" ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices"
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "api": {
    "test-connection": {
      "method": "post",
      "path": "/test-connection",
      "public": false
    }
  }
}