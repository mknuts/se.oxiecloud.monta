{
  "name": {
    "en": "Monta EV Charger",
    "se": "Monta laddbox"
  },
  "class": "evcharger",
  "capabilities": [
  
    "evcharger_charging",
    "charging_state",
    "charger_state",
    "connected",
    "measure_power",
    "meter_power",
    "measure_monetary",
    "meter_lastkwh"
    
  ],
  "capabilitiesOptions": {
    "measure_monetary": {
      "title": { "en": "Charge cost", "sv": "Laddkostnad" }

    },
    "meter_power": {"preventInsights": true}

  },
  "energy": {
    "evCharger": true,
    "meterPowerImportedCapability": "meter_power"
  },

  "platforms": [
    "local"
  ],
  "connectivity": [
    "cloud"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/driver_small.png",
    "large": "{{driverAssetsPath}}/images/driver_large.png"
  },
  "pair": [
    
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
  {
    "type": "group",
    "label": {
      "en": "Connection Settings",
      "sv": "Anslutningsinställningar"
    },
    "children": [
      {
        "id": "poll_interval",
        "type": "number",
        "label": {
          "en": "Polling Interval (seconds)",
          "sv": "Polling-intervall (sekunder)"
        },
        "hint": {
          "en": "How often should data be fetched? (Minimum 15s)",
          "sv": "Hur ofta ska data hämtas? (Minst 15s)"
        },
        "default": 30,
        "attr": {
          "min": 15,
          "max": 3600
        }
      }
    ]
  }
]
}